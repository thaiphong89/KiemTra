@model KiemTra.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<h1>Chi tiết sinh viên</h1>

<div>
    <h4>Thông tin sinh viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaSV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class="col-sm-10">
            @(Model.GioiTinh ? "Nam" : "Nữ")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaNganh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNganh)
        </dd>
    </dl>

    @if (!string.IsNullOrEmpty(Model.Hinh))
    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hinh)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Hinh" alt="@Model.HoTen" style="max-width: 300px; max-height: 300px;" />
        </dd>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MaSV">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</div>

