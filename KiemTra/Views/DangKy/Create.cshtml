@model KiemTra.Models.DangKy

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create Registration</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

