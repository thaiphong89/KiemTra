@{
    ViewData["Title"] = "Thông Tin Học Phần Đã Lưu";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông Tin Học Phần Đã Lưu</h4>
            <p class="text-success">Đăng ký học phần đã được lưu thành công!</p>

            <div class="mt-3">
                <p><strong>Mã sinh viên:</strong> @TempData["MaSV"]</p>
                <p><strong>Họ tên:</strong> @TempData["HoTen"]</p>
                <p><strong>Ngày đăng ký:</strong> @(((DateTime)TempData["NgayDK"]!).ToString("dd/MM/yyyy HH:mm:ss"))</p>
                <p><strong>Ngành học:</strong> @TempData["NganhHoc"]</p>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Về trang chủ</a>
            </div>
        </div>
    </div>
</div>

